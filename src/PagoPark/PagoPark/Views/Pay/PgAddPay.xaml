<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PagoPark.Views.PgAddPay"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:PagoPark.ViewModels"
    Title="Add payment"
    x:DataType="vm:PgAddPayViewModel"
    BackgroundColor="#CC401A24"
    Shell.PresentationMode="ModalAnimated">

    <Frame
        Margin="14"
        Padding="12"
        VerticalOptions="Center">
        <Grid
            RowDefinitions="auto,auto,auto"
            RowSpacing="14"
            VerticalOptions="End">
            <Label
                Style="{StaticResource LabelTitle}"
                HorizontalOptions="Center"
                Text="Set payment"
                VerticalOptions="Center" />
            <VerticalStackLayout Grid.Row="1" Spacing="16">
                <Label
                    Style="{StaticResource LabelCaption}"
                    Grid.Row="0"
                    HorizontalOptions="Center"
                    Text="{Binding SelectedPaymentLog, Mode=OneWay}"
                    TextTransform="Uppercase" />
                <Grid RowDefinitions="auto, auto">
                    <Label
                        Style="{StaticResource LabelSubtitle}"
                        Grid.Row="0"
                        Text="Pay: *" />
                    <Entry
                        Grid.Row="1"
                        Keyboard="Numeric"
                        Placeholder="0.00"
                        Text="{Binding Pay}" />
                </Grid>
                <Grid RowDefinitions="auto, auto">
                    <Label
                        Style="{StaticResource LabelSubtitle}"
                        Grid.Row="0"
                        Text="Observations:" />
                    <Editor
                        Grid.Row="1"
                        Placeholder="Write your observation here!"
                        Text="{Binding Observations}" />
                </Grid>
                <Label
                    FontSize="Body"
                    IsVisible="{Binding IsVisibleInfo, Mode=OneWay}"
                    TextColor="Red">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span FontFamily="icofont" Text="{StaticResource InfoCircle}" />
                            <Span Text=" Enter the required data (*)" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="2" Spacing="10">
                <Button Command="{Binding SaveCommand}" Text="Save" />
                <Button Command="{Binding CancelCommand}" Text="Cancel" />
            </VerticalStackLayout>
        </Grid>
    </Frame>

</ContentPage>